doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Timeline
    link(rel="stylesheet" href="lib/normalize-v8.0.1.css")
    link(rel="stylesheet" href="css/style.min.css")

  body
    .wrap
      include ../modules/header

      main
        .main
          h1.main__title Task 'Timeline'

          ol.main__timeline.timeline.timeline--label-left
            - for (var n = 0; n < 4; n++)
              li.timeline__item
                .timeline__progress
                span.timeline__label(tabindex="0") Step

    include ../modules/footer

    script(src="lib/jquery-v3.5.1.js")
    script(src="js/script.js")
